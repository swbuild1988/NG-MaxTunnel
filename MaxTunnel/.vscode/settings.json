{
    "prettier.tabWidth": 4,
    "vetur.format.options.tabSize": 4,
    "prettier.tslintIntegration": true,
    "tslint.autoFixOnSave": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "beautify.language": {
        "js": {
            "type": [
                "javascript",
                "json",
                "jsonc",
                "typescript"
            ],
            "filename": [
                ".jshintrc",
                ".jsbeautifyrc"
            ]
        },
        "css": [
            "css",
            "scss"
        ],
        "html": [
            "htm",
            "html"
        ]
    }
}
